@page "/ch09r03"
@page "/ch09r03/{eventId:guid}"
@page "/ch09r03/{eventId:guid}/venues/{venue?}"

<h1>Welcome in the external event manager!</h1>

<hr />
<p>Route examples</p>
<p><a href="/ch09r03/@Guid.NewGuid()">Specific event</a></p>
<p><a href="/ch09r03/@Guid.NewGuid()/venues/museum">Specific event at venue</a></p>
<p><a href="/ch09r03/@Guid.NewGuid()?date=@DateTime.Today.Date">Specific event on date</a></p>
<hr />

@if (EventId == default) return;
<p>Event ID: @EventId</p>
<p>In @(Venue ?? "all venues")</p>

@if (Date == default) return;
<p>On @Date</p>

@code {
    [Parameter] public Guid EventId { get; set; }
    [Parameter] public string Venue { get; set; }

    [SupplyParameterFromQuery]
    public DateTime Date { get; set; }
}