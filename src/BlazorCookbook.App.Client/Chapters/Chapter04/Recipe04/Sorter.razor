@code {
    private string _sortBy = string.Empty;
    private bool _isAsc;

    public IList<T> Sort<T>(IList<T> data, string property)
    {
        _isAsc = property == _sortBy ? !_isAsc : true;
        _sortBy = property;
        var by = GetKey<T>();

        return _isAsc ?
            data.OrderBy(by).ToList() :
            data.OrderByDescending(by).ToList();
    }

    private Func<T, object?> GetKey<T>()
        => it => it?.GetType()?
                    .GetProperty(_sortBy)?
                    .GetValue(it, null);
}